---
const response = await fetch('https://api.github.com/users/cristianqsanchez/repos')
const data = await response.json()

import Card from './Card.astro'
---
<h2>Repositories</h2>
<section class="container">
  {data.map((repo: { html_url: string; name: string; description: string; }) => (
    <Card
      href={repo.html_url}
      title={repo.name}
      body={repo.description}
    />
  ))}
</section>