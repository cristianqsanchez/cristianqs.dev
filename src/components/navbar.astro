---
type NavItem = {
  name: string
  reference: string
}

const NAV_ITEMS: NavItem[] = [
  {
    name: 'Experiencia',
    reference: '#experiencia',
  },
  {
    name: 'Proyectos',
    reference: '#proyectos',
  },
  {
    name: 'Sobre m√≠',
    reference: '#sobre-mi',
  },
  {
    name: 'Blog',
    reference: '/blog',
  },
]
---

<header class='flex justify-center py-5 z-10 sticky top-0 md:mx-auto'>
  <nav
    class='flex flex-1 justify-evenly items-center bg-neutral-900 rounded-2xl py-2 px-4'>
    {
      NAV_ITEMS.map(({ name, reference }) => (
        <a
          class='rounded-full px-3 opacity-80 font-semibold transition duration-300 hover:scale-105 hover:opacity-100 hover:bg-neutral-800'
          href={reference}>
          {name}
        </a>
      ))
    }
  </nav>
</header>
