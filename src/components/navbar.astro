---
import { getI18N } from 'src/i18n'
import LanguageSelector from './language-selector.astro'

type NavItem = {
  name?: string
  reference?: string
}

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

const NAV_ITEMS: NavItem[] = [
  {
    name: i18n?.EXPERIENCE.SECTION_TITLE,
    reference: `#${i18n?.EXPERIENCE.SECTION_ID}`,
  },
  {
    name: i18n?.PROJECTS.SECTION_TITLE,
    reference: `#${i18n?.PROJECTS.SECTION_ID}`,
  },
  {
    name: i18n?.ABOUT_ME.SECTION_TITLE,
    reference: `#${i18n?.ABOUT_ME.SECTION_ID}`,
  },
  {
    name: 'Blog',
    reference: '/blog',
  },
]
---

<header
  class='flex flex-wrap items-center justify-center gap-4 py-5 z-10 sticky top-0 md:mx-auto'>
  <nav
    class='flex flex-1 justify-evenly items-center bg-neutral-900 rounded-2xl py-2 px-4'>
    {
      NAV_ITEMS.map(({ name, reference }) => (
        <a
          class='rounded-full px-3 opacity-80 font-semibold transition duration-300 hover:scale-105 hover:opacity-100 hover:bg-neutral-800'
          href={reference}>
          {name}
        </a>
      ))
    }
  </nav>
  <LanguageSelector />
</header>
