---
import Navbar from '@components/navbar.astro'
import BaseLayout from './BaseLayout.astro'
import { getI18N } from 'src/i18n'
import OgMetaTags from '@components/og-meta-tags.astro'

const { currentLocale } = Astro

const i18n = getI18N({ currentLocale })
const main = i18n?.MAIN
---

<BaseLayout
  title={main?.WEB_TITLE}
  description={main?.WEB_DESCRIPTION}
  class='bg-neutral-950 bg-[radial-gradient(ellipse_100%_100%_at_50%_-80%,rgba(150,150,250,0.7),rgba(255,255,255,0))]'>
  <OgMetaTags slot='head' />
  <Navbar />
  <slot />
</BaseLayout>
